mixin field(field)
	div.field
		label= field.label
			<br/>
			if field.type == 'text'
				input(type="text", name=field.name, value="")
			else if field.type == 'select'
				select(name=field.name)
					each opt in field.options
						option(value=opt.val)=opt.name
			else if field.type == 'checkbox'
				input(type="checkbox", name=field.name)

doctype html
html(lang="en")
	head
		title= title
		meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
		link(rel="stylesheet", href="/static/css/main.css", type="text/css")
		
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js", type="text/javascript")
		script(src="/static/scripts/main.js", type="text/javascript")
	body
		div.newplayer
			Добавить игрока
			
			each field, index in fields
				+field(field)
			
			div.buttons
				button send
				
		div.ratingTable
			table
				tr
					th='№'
					th='Имя'
					th='Город'
					th='Кол-во турниров'
					th='Кол-во турниров в сезоне'
					th='Кол-во игр'
					th='Побед'
					th='Поражений'
					th='% побед'
					th='Рейтинг'
					th='Ранг'
					
				each row, index in rows
					if row.active
						tr
							td=row.place
							td=row.firstname + ' ' + row.lastname
							td=row.city
							td=row.tournaments
							td=row.seasonTournaments
							td=row.games
							td=row.wins
							td=row.loses
							td=row.wins_percent
							td=row.rating
							td=row.rang
					else
						tr.nonactive
							td=row.place
							td=row.firstname + ' ' + row.lastname
							td=row.city
							td=row.tournaments
							td=row.seasonTournaments
							td=row.games
							td=row.wins
							td=row.loses
							td=row.wins_percent
							td=row.rating
							td=row.rang
						